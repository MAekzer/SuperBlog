@model SuperBlogData.Models.ViewModels.EditRoleViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Редактирование Роли";
}

<h1 class="text-center mb-5">Редактирование Роли @Model.Name</h1>
<form asp-action="Update" asp-controller="Role">
    <input type="text" hidden value="@Model.Id" asp-for="Id" />
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">Системное название роли</span>
            <input type="text" class="form-control" asp-for="Name">
            
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">Название роли для отображения</span>
            <input type="text" class="form-control" asp-for="DisplayName">
            
        </div>
        <span asp-validation-for="DisplayName" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">Описание</span>
            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
            
        </div>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="text-center">
        <button type="submit" class="mx-auto btn btn-primary btn-lg mt-4">Сохранить изменения</button>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
